generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement()) // primary key for joins
  uid           String   @unique                       // Firebase UID
  email         String?  
  emailVerified Boolean  @default(false)
  createdAt     DateTime @default(now())
}
